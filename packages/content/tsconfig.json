{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2020"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "declaration": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*",
        "scripts/**/*",
        ".contentlayer/generated/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}